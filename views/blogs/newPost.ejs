<%- include('../partials/header.ejs') %>
<div class="container">
  <h2>Create a New Blogger Post</h2>
  <form action="/new-post" method="post">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required />
    <label for="content">Content:</label>
    <textarea
      id="content"
      name="content"
      required
      class="post_content"
    ></textarea>
    <input
      type="hidden"
      id="blog_id"
      name="blog_id"
      value="<%=locals.blog_id%>"
    />

    <input type="submit" value="Post" />

    <% if(locals.wrongData) { %>
    <p style="color: #800">Please enter a title and content for the post.</p>
    <% } %>
  </form>
</div>

