    <nav>
      <h3>blogger platform</h3>
      <ul>
        <li><a href="/"> home </a></li>
        <li><a href="/blogs"> blogs </a></li>
        <% if(!locals.loggedInUser) { %>
        <li><a href="/login"> login </a></li>
        <li><a href="/signup"> sign up </a></li>
        <% } else { %>
        <li><a href="/logout"> logout </a></li>

        <% } %>
      </ul>
    </nav>
  </body>
